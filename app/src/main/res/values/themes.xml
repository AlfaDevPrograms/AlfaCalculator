<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AlfaCalculator" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">
            @color/white
        </item>
        <item name="colorPrimaryVariant">
            @color/white
        </item>
        <item name="colorOnPrimary">
            @color/black
        </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">
            @color/black
        </item>
        <item name="colorSecondaryVariant">
            @color/black
        </item>
        <item name="colorOnSecondary">
            @color/black
        </item>
        <item name="android:statusBarColor">
            @color/black
        </item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.AlfaCalculator" parent="AlfaCalculator">

    </style>
</resources>