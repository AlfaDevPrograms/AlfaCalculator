<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/cl">

    <com.yandex.mobile.ads.banner.BannerAdView
            android:id="@+id/ad_container_view"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center|top"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" />

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:scrollbarSize="0dp"
            android:overScrollMode="never"
            android:id="@+id/vert_sv"
            app:layout_constraintBottom_toTopOf="@+id/hor_sv"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/theme"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/theme">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/history"
                android:gravity="bottom|start"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:alpha="0.6"
                android:fontFamily="@font/main_font"
                android:lineSpacingExtra="8sp" />
    </ScrollView>

    <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/result_text_view"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layoutDirection="ltr"
            android:overScrollMode="never"
            android:scrollbarSize="0dp"
            android:id="@+id/hor_sv">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="text|textAutoComplete|textNoSuggestions"
                android:id="@+id/operation_text_view"
                android:background="@color/empty"
                android:longClickable="false"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="60sp"
                android:fontFamily="@font/main_font"
                android:enabled="false"
                android:gravity="center" />
    </HorizontalScrollView>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/result_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/all_btns"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:gravity="center|start"
            android:textColor="@color/grayBlack"
            android:alpha="0.8"
            android:fontFamily="@font/main_font"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeTextType="uniform"
            android:maxLines="1" />

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_btns"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/empty"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_pi"
                    android:layout_marginHorizontal="8dp"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="@+id/btn_radical"
                    app:layout_constraintStart_toStartOf="@+id/btn_radical">

                <TextView
                        android:text="@string/pi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_pi_tv"
                        android:gravity="center"
                        android:fontFamily="@font/main_font"
                        android:textSize="44sp"
                        android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_exp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="@+id/btn_1"
                    app:layout_constraintStart_toStartOf="@+id/btn_1">

                <TextView
                        android:text="@string/exp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_exp_tv"
                        android:gravity="center"
                        android:fontFamily="@font/main_font"
                        android:textSize="44sp"
                        android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_radical"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toStartOf="@+id/btn_1"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_1"
                    app:layout_constraintTop_toTopOf="@+id/btn_1">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_radical_iv"
                        android:layout_margin="14dp"
                        android:foreground="@drawable/radical"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_4"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_rank"
                    app:layout_constraintEnd_toStartOf="@+id/btn_4"
                    android:layout_marginHorizontal="8dp"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintTop_toTopOf="@+id/btn_4">

                <TextView
                        android:text="@string/rank"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_rank_tv"
                        android:gravity="center"
                        android:fontFamily="@font/main_font"
                        android:textSize="44sp"
                        android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/greenEdit"
                    android:id="@+id/btn_equal"
                    android:layout_marginHorizontal="8dp"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_equal_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/equal"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_plus"
                    app:layout_constraintBottom_toTopOf="@+id/btn_equal"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_plus_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/plus"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_plus"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_minus"
                    app:layout_constraintBottom_toTopOf="@+id/btn_plus"
                    app:layout_constraintStart_toStartOf="@+id/btn_plus"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_minus_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/minus"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_minus"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_multiplier"
                    app:layout_constraintBottom_toTopOf="@+id/btn_minus"
                    app:layout_constraintStart_toStartOf="@+id/btn_minus"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_multiplier_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/multiplier"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_multiplier"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_divider"
                    app:layout_constraintBottom_toTopOf="@+id/btn_multiplier"
                    app:layout_constraintStart_toStartOf="@+id/btn_multiplier"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_divider_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/divider"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_percent"
                    app:layout_constraintBottom_toTopOf="@+id/btn_multiplier"
                    app:layout_constraintStart_toStartOf="@+id/btn_9"
                    app:layout_constraintEnd_toEndOf="@+id/btn_9"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_percent_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/percent"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_7"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/red"
                    android:id="@+id/btn_clear"
                    android:layout_margin="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_7"
                    app:layout_constraintTop_toTopOf="@+id/btn_7"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_clear_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/reset"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_left_br"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/red_white"
                    android:id="@+id/btn_remove"
                    android:layout_margin="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_left_br"
                    app:layout_constraintTop_toTopOf="@+id/btn_left_br"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_remove_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/remove"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_2"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_1"
                    app:layout_constraintEnd_toStartOf="@+id/btn_2"
                    app:layout_constraintTop_toTopOf="@+id/btn_2"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_1_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/btn_1"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_0"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_2"
                    app:layout_constraintBottom_toTopOf="@+id/btn_0"
                    app:layout_constraintStart_toStartOf="@+id/btn_0"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_2_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/btn_2"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_3"
                    app:layout_constraintBottom_toTopOf="@+id/btn_point"
                    app:layout_constraintStart_toEndOf="@+id/btn_0"
                    app:layout_constraintStart_toStartOf="@+id/btn_point"
                    app:layout_constraintEnd_toEndOf="@+id/btn_point"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_3_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/btn_3"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_1"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_4"
                    app:layout_constraintStart_toStartOf="@+id/btn_1"
                    app:layout_constraintBottom_toTopOf="@+id/btn_1"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_4_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/btn_4"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_2"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_5"
                    app:layout_constraintStart_toEndOf="@+id/btn_1"
                    app:layout_constraintBottom_toTopOf="@+id/btn_2"
                    app:layout_constraintStart_toStartOf="@+id/btn_2"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_5_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/btn_5"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_3"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_6"
                    app:layout_constraintStart_toStartOf="@+id/btn_3"
                    app:layout_constraintBottom_toTopOf="@+id/btn_3"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_6_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/btn_6"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_4"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_7"
                    app:layout_constraintStart_toStartOf="@+id/btn_4"
                    app:layout_constraintBottom_toTopOf="@+id/btn_4"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_7_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/btn_7"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_5"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_8"
                    app:layout_constraintStart_toStartOf="@+id/btn_5"
                    app:layout_constraintBottom_toTopOf="@+id/btn_5"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_8_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/btn_8"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_6"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_9"
                    app:layout_constraintStart_toStartOf="@+id/btn_6"
                    app:layout_constraintBottom_toTopOf="@+id/btn_6"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_9_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/btn_9"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_0"
                    app:layout_constraintEnd_toStartOf="@+id/btn_point"
                    android:layout_marginHorizontal="8dp"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_0_iv"
                        android:layout_margin="10dp"
                        android:foreground="@drawable/btn_0"
                        android:foregroundTint="@color/black"
                        android:foregroundTintMode="src_in" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintEnd_toEndOf="@+id/btn_7"
                    app:cardCornerRadius="50dp"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/main"
                    android:id="@+id/btn_left_br"
                    app:layout_constraintStart_toStartOf="@+id/btn_7"
                    app:layout_constraintBottom_toTopOf="@+id/btn_7"
                    android:layout_margin="8dp"
                    android:foreground="?attr/selectableItemBackground">

                <TextView
                        android:text="@string/left_br"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_left_br_tv"
                        android:gravity="center"
                        android:fontFamily="@font/main_font"
                        android:textSize="44sp"
                        android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>

